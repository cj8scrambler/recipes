# Recipes Application Environment Variables
# Copy this file to .env and customize for your environment

# ========================================
# Database Configuration
# ========================================
# If not set, a MySQL container will be created with these defaults
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=recipes
MYSQL_USER=recipes_user
MYSQL_PASSWORD=recipes_password
MYSQL_PORT=3306

# To use an external database, set DATABASE_URL directly:
# DATABASE_URL=mysql+pymysql://user:password@host:port/database

# ========================================
# Backend Configuration
# ========================================
BACKEND_PORT=8000
FLASK_ENV=production
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# ========================================
# Frontend Configuration
# ========================================
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:8000

# ========================================
# Optional: External Database
# ========================================
# If you have an existing database, uncomment and configure:
# EXTERNAL_DB=true
# DB_HOST=your-db-host.com
# DB_PORT=3306
# DB_NAME=recipes
# DB_USER=recipes_user
# DB_PASSWORD=your-password
